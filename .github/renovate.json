{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "ignorePaths": [
        "integration/testdata/**",
        "test/resources/**"
    ],
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "description": "Create PRs to roll back Go module if the current version is not found in the registry.",
            "matchManagers": ["gomod"],
            "rollbackPrs": true
        },
        {
            "description": "Automerge patch version updates for Go modules (except versions 0.x as they could have breaking changes)",
            "matchManagers": ["gomod"],
            "matchUpdateTypes": ["patch"],
            "matchCurrentVersion": "!/^(v?0)/",
            "automerge": true,
            "addLabels": ["renovate-automerge"]
        }
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "matchStringsStrategy": "any",
            "managerFilePatterns": [
                "/resources/default_pipeline_environment.yml$/"
            ],
            "matchStrings": [
                "cycloneDXgomodDownload: 'https://github.com/(?<depName>.*)/releases/download/v(?<currentValue>.*)/.*'"
            ],
            "depTypeTemplate": "dependencies",
            "datasourceTemplate": "github-releases",
            "extractVersionTemplate": "^v(?<version>.*)$",
            "autoReplaceStringTemplate": "cycloneDXgomodDownload: 'https://github.com/CycloneDX/{{depName}}/releases/download/v{{newValue}}/cyclonedx-gomod_{{newValue}}_linux_amd64.tar.gz'"
        },
        {
            "customType": "regex",
            "matchStringsStrategy": "any",
            "managerFilePatterns": [
                "/resources/default_pipeline_environment.yml$/"
            ],
            "matchStrings": [
                "cycloneDXmavenDownload: 'https://github.com/(?<depName>.*)/archive/refs/tags/.*'"
            ],
            "depTypeTemplate": "dependencies",
            "datasourceTemplate": "github-releases",
            "extractVersionTemplate": "^v(?<version>.*)$",
            "autoReplaceStringTemplate": "cycloneDXmavenDownload: 'https://github.com/CycloneDX/{{depName}}/archive/refs/tags/cyclonedx-maven-plugin-{{newValue}}.tar.gz'"
        },
        {
            "customType": "regex",
            "matchStringsStrategy": "any",
            "managerFilePatterns": [
                "/resources/default_pipeline_environment.yml$/"
            ],
            "matchStrings": [
                "cycloneDXgradleDownload: 'https://github.com/(?<depName>.*)/archive/refs/tags/.*'"
            ],
            "depTypeTemplate": "dependencies",
            "datasourceTemplate": "github-releases",
            "extractVersionTemplate": "^v(?<version>.*)$",
            "autoReplaceStringTemplate": "cycloneDXgradleDownload: 'https://github.com/CycloneDX/{{depName}}/archive/refs/tags/cyclonedx-maven-plugin-{{newValue}}.tar.gz'"
        },
        {
            "customType": "regex",
            "matchStringsStrategy": "any",
            "managerFilePatterns": [
                "/resources/default_pipeline_environment.yml$/"
            ],
            "matchStrings": [
                "cycloneDXpythonDownload: 'https://github.com/(?<depName>.*)/releases/download/v(?<currentValue>.*)/.*'"
            ],
            "depTypeTemplate": "dependencies",
            "datasourceTemplate": "github-releases",
            "extractVersionTemplate": "^v(?<version>.*)$",
            "autoReplaceStringTemplate": "cycloneDXpythonDownload: 'https://github.com/CycloneDX/{{depName}}/releases/download/v{{newValue}}/cyclonedx_bom-{{newValue}}.tar.gz'"
        }
    ]
}
