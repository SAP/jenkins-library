{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "ignorePaths": [
        "integration/testdata/**",
        "test/resources/**"
    ],
    "labels": [
        "dependencies"
      ],
    "packageRules": [
        {
          "description": "Automerge non-major updates (versions >1.0.0)",
          "matchUpdateTypes": ["minor", "patch"],
          "matchCurrentVersion": "!/^0/",
          "automerge": true
        }
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "rollbackPrs": true
}
